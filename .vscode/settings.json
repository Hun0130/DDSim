{
    "cmake.configureOnOpen": true,
    "cmake.sourceDirectory": "${workspaceFolder}/src",
    "cmake.buildDirectory": "${workspaceFolder}/src/build",
    "cmake.useCMakePresets": false,
    "C_Cpp.default.compileCommands": "${workspaceFolder}/src/build/compile_commands.json",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/include",
        "${workspaceFolder}/third_party",
        "${workspaceFolder}/third_party/Fast-DDS/Fast-DDS/install/include"
    ],
    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.errorSquiggles": "enabled",
    "files.associations": {
        "*.idl": "cpp"
    },
    "files.exclude": {
        ".cursor/**": true
    },
    "editor.formatOnSave": true
}